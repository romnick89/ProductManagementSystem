@model ProductCreateVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>           
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="ProductTypeId" class="control-label"></label>
                <select asp-for="ProductTypeId" class="form-control" asp-items="@Model.ProductTypes"></select>
                <span asp-validation-for="ProductTypeId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ProductTypeId" />
            <br />
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" min="0"/>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <br />          
            <div class="form-group">
                @if(Model.ProductTypeId != 0) {
                    <a asp-action="DisplayByType" asp-route-id="@Model.ProductTypeId" class="btn btn-outline-primary">Back To List</a>
                }
                else {
                    <a asp-action="Index" class="btn btn-outline-primary">Back To List</a>
                }
                <input type="submit" value="Add Product" class="btn btn-outline-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
